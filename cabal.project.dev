import: cabal.project
write-ghc-environment-files: always

package *
  optimization: 0
  debug-info: True
  documentation: True
  library-for-ghci: True

package bitvec
  library-for-ghci: False

package jbeam-edit
  ghc-options:
    -haddock
    -Wno-invalid-haddock

  documentation: False
  tests: True
  flags: +dump-ast +transformation +lsp-server -windows-example-paths
